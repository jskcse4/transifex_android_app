<?xml version="1.0" encoding="UTF-8"?> 
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" >
        <layer-list >
			  <item>
			      <bitmap 
			          android:src="@drawable/background_menu_button_selected_gradient"
			           />
			   </item>
			  <item>
				    <shape  
				     android:shape="rectangle"    > 
				     <stroke android:width="1dp" android:color="@color/titleBlue" />
				     
				     <solid android:color="#00000000" />
					</shape>
			  </item>	  
		 </layer-list>    
    </item>
    <item >
        <layer-list >
			  <item>
			      <bitmap 
			          android:src="@drawable/background_button_gradient"
			           />
			   </item>
			  <item>
				    <shape  
				     android:shape="rectangle"    > 
				     <stroke android:width="1dp" android:color="@color/black" />
				     
				     <solid android:color="#00000000" />
					</shape>
			  </item>	  
		 </layer-list>    
    </item>
</selector>


