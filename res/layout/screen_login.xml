<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/holder"  xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    > <!-- We add this additonal layout because it solves the non-inflated margin bug in froyo 2.2-->
	<RelativeLayout
	    android:id="@+id/login"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_margin="30dp"
	    android:background="@drawable/rectangle_login"
	    android:padding="15dp" >
	
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	
	        <TextView
	            android:id="@+id/TextView01"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="EMAIL OR USERNAME"
	            android:textAppearance="?android:attr/textAppearanceMedium"
	            android:textColor="@color/gray" />
	
	        <EditText
	            android:id="@+id/user"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/rectangle_input"
	            android:inputType="text"
	            android:padding="10dp"
	            android:text="" >
	
	            <requestFocus />
	        </EditText>
	
	        <TextView
	            android:id="@+id/title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp"
	            android:text="PASSWORD"
	            android:textAppearance="?android:attr/textAppearanceMedium"
	            android:textColor="@color/gray" />
	
	        <EditText
	            android:id="@+id/loginPassword"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/rectangle_input"
	            android:inputType="textPassword"
	            android:padding="10dp"
	            android:text="" />
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" >
	
	            <TextView
	                android:id="@+id/textView2"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_margin="10dp"
	                android:text="Remember me"
	                android:textAppearance="?android:attr/textAppearanceMedium"
	                android:textColor="@color/gray" />
	
	            <CheckBox
	                android:id="@+id/rememberMeCheckBox"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_margin="10dp"
	                android:checked="false"
	                 />
	
	        </LinearLayout>
	
	        <Button
	            android:id="@+id/loginButton"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/rectangle_button"
	            android:text="Login" />
	
	    </LinearLayout>
		
	</RelativeLayout>
</LinearLayout>
